<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    {% block stylesheets %}

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.0/semantic.min.css"/>

    {% endblock %}
</head>



<body onload="">

{% block body %}
    <div class="ui fixed inverted menu">
        <div class="ui container">
            <img class="logo" src="{{ asset('img/logo.png') }}">
            <a href={{ path('homepage') }} class="item">Inicio</a>
            <a href="" class="item">Vuelos</a>
            <a href="" class="item">Pasajeros</a>
            <a href={{ path('user_tracking') }} class="item">Mapa</a>
            <div class="right menu">
                {% if is_granted('ROLE_ADMIN') %}
                    <div class="item">
                        <a href={{ path('heatmap') }} class="ui inverted button">Heatmap</a>
                    </div>
                    <div class="item">
                        <a href={{ path('admin') }} class="ui inverted button">Administrar</a>
                    </div>
                {% endif %}
                {% if is_granted('ROLE_USER') or is_granted('ROLE_ADMIN')%}
                    <div class="item">
                        <a href={{ path('logout') }} class="ui inverted button">Cerrar sesión</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}

    <script type="text/javascript">


        function geoFindMe() {
            var output = document.getElementById("out");

            if (!navigator.geolocation){
                output.innerHTML = "<p>Geolocation is not supported by your browser</p>";
                return;
            }

            function success(position) {


                var latitude  = position.coords.latitude;
                var longitude = position.coords.longitude;

                output.innerHTML = '<p>Latitude is ' + latitude + '° <br>Longitude is ' + longitude + '°</p>';

                var img = new Image();
                img.src = "https://maps.googleapis.com/maps/api/staticmap?center=" + latitude + "," + longitude + "&zoom=13&size=300x300&sensor=false";

                output.appendChild(img);
            }

            function error() {
                output.innerHTML = "Unable to retrieve your location";
            }

            output.innerHTML = "<p>Locating…</p>";

            navigator.geolocation.getCurrentPosition(success, error);
        }


    </script>

{% endblock %}


</body>

</html>