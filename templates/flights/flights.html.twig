{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block stylesheets %}

    {{ parent() }}
    <style>
        #main-container{
            margin: 150px auto;
            width: 600px;
        }
        table{
            background-color: lightgrey;
            text-align: left;
            border-collapse: collapse;
            width: 100%;
            margin-top: 20px;
        }

        th, td{
            padding: 20px;
        }

        thead{
            background-color: #246355;
            border-bottom: solid 5px #0F362D;
            color: white;
        }

        tr:nth-child(even){
            background-color: #ddd;
        }

        tr:hover{
            background-color: #369681;
            color: white
        }
    </style>


{% endblock %}


{% block body %}

    {{ parent() }}

    <div class="main-container">
        <table>
            <thead>
            <tr>
                <th>ICAO</th><th>Tiempo de aterrizaje estimado</th><th>Aeropuerto Origen</th><th>Aeropuerto Destino</th></tr>
            </thead>
        </table>
    </div>

{% endblock %}