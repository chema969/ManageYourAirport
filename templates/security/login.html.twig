{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style type="text/css">
        body {
            background-color: #DADADA;
        }
        body > .grid {
            height: 100%;
        }
        .image {
            margin-top: -100px;
        }
        .column {
            max-width: 450px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="ui middle aligned center aligned grid">
        <div class="row">
            <div class="column">
                <h2 class="ui teal image header">
                    <img src="{{ asset('img/logo.png') }}" class="image">
                    <div class="content">
                        <-logo | title
                    </div>
                </h2>
                {% for label, messages in app.flashes %}
                    {# you can read and display just one flash message type... #}
                    <div class="ui {{ label }} message">
                        <ul class="list">
                            {% for message in messages %}
                                <li>{{ message }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endfor %}
                {% if error %}
                    <div class="ui message negative">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <form class="ui large form" action="{{ path('login') }}" method="post">
                    <div class="ui stacked segment">
                        <div class="ui error message"></div>

                        <div class="field">
                            <div class="ui left icon input">
                                <i class="user icon"></i>
                                <input type="text" name="_username" placeholder="Nombre de usuario" value="{{ last_username }}">
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui left icon input">
                                <i class="lock icon"></i>
                                <input type="password" name="_password" placeholder="Password">
                            </div>
                        </div>
                        <button class="ui fluid large teal submit button">
                            Enviar
                        </button>
                    </div>
                </form>

                <div class="ui message">
                    ¿Eres nuevo? <a href="{{ path('homepage') }}">Regístrate</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}Iniciar sesión{% endblock %}


{% block javascripts %}
    <script src="{{ asset('build/js/login.js') }}"></script>

    <script !src="">
        $(document)
            .ready(function() {
                $('.ui.form')
                    .on('blur')
                    .form({
                        fields: {
                            _username: {
                                rules: [
                                    {
                                        type: 'empty',
                                        prompt: 'Introduzca un nombre de usuario'
                                    }
                                ]
                            },
                            _password: {
                                rules: [
                                    {
                                        type: 'empty',
                                        prompt: 'Introduzca una contraseña'
                                    }
                                ]
                            }
                        }
                    })
                ;
            })
        ;
    </script>
{% endblock %}
