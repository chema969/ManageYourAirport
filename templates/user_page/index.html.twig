{% extends 'base.html.twig' %}


{% block title %}
    Userpage
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.0/semantic.min.css"/>
{% endblock %}

{% block body %}
    {{ parent() }}


    <div class="ui equal width grid">
        <div class="center aligned row">
            <div class="column">
                <ul></ul>{#for filling the gap#}
            </div>
        </div>
    </div>

    <div class="ui equal width grid">
        <div></div>
        <div class="center aligned row">
            <div class="column">
                <ul><b>Mapas</b></ul>
                <ul class="item">
                    <a href="{{ path('user_tracking') }}" class="ui button">Mapa</a>
                </ul>
                <ul class="item">
                    <a href="{{ path('traffic') }}" class="ui button">Tr√°fico</a>
                </ul>

                <ul><b>Equipaje</b></ul>
                <ul class="item">
                    <a href="{{ path('luggage search') }}" class="ui button">Mi equipaje</a>
                </ul>

                <ul><b>Ayuda por chat</b></ul>
                <ul class="item">
                    <a href="{{ path('watson') }}" class="ui button">watson</a>
                </ul>
            </div>



            <div class="column">
                <ul><b>Pronostico del tiempo</b></ul>
                <ul class="item">
                    <a href="{{ path('weather') }}" class="ui button">Tiempo</a>
                </ul>

                <ul><b>Vuelos</b></ul>
                <ul class="item">
                    <a href="{{ path('flights_tracking_incomming') }}" class="ui button">Lista de vuelos de llegada</a>
                </ul>
                <ul class="item">
                    <a href="{{ path('flights_tracking_outcomming') }}" class="ui button">Lista de vuelos de salida</a>
                </ul>
                <ul class="item">
                    <a href="{{ path('flights') }}" class="ui button">mapa de aviones</a>
                </ul>
            </div>



            <div class="column">
                {% if is_granted('ROLE_ADMIN') %}
                    <ul><b>Especial para ti</b></ul>
                    <ul class="item">
                        <a href="{{ path('heatmap') }}" class="ui button">Heatmap</a>
                    </ul>
                    <ul class="item">
                        <a href="{{ path('admin') }}" class="ui button">Administrar</a>
                    </ul>
                    <ul class="item">
                        <a href="{{ path('settings') }}" class="ui button">Ajustes</a>
                    </ul>

                    <ul class="item">
                        <a href="{{ path('luggage') }}" class="ui button">Lista de equipaje</a>
                    </ul>
                    <ul class="item">
                        <a href="{{ path('lost luggage') }}" class="ui button">Equipaje perdido</a>
                    </ul>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}