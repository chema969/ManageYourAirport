{% extends 'base.html.twig' %}

{% block title %}Tiempo ofrecido por AEMET{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.0/semantic.min.css"/>
    <style type="text/css">
        body {
            background-color: #DADADA;
        }
        body > .grid {
            height: 100%;
        }
        .image {
            margin-top: -100px;
        }
        .column {
            max-width: 450px;
        }
        main-container{
            margin: 50px auto;
            width: 600px;
        }
        table{
            background-color: white;
            text-align: left;
            border-collapse: collapse;
            width: 100%;
            margin-top: 70px;
        }

        th, td{
            padding: 20px;
        }

        thead{
            background-color: #246355;
            border-bottom: solid 5px #0F362D;
            color: white;
        }

        tr:nth-child(even){
            background-color: #ddd;
        }

        tr:hover{
            background-color: #369681;
            color: white
        }
    </style>
{% endblock %}
{% block body %}

    {{ parent() }}

    {% if failed==true %}
        <div class="ui equal width grid">
            <div></div>
            <div class="center aligned row">
                <div class="column">
                </div>
                <div class="column">
                    <ul>Lo siento, estamos teniendo problemas con la conexion a Aemet, intentalo mas tarde</ul>
                </div>
                <div class="column">
                </div>
            </div>
        </div>

        <div class="main-container">
            <table>
                <thead>
                <tr>
                    <th>       </th><th>Ahora</th><th>Hoy</th><th>Mañana</th>
                </tr>
                </thead>
                <tr>
                    <td style="background-color: #246355">hola</td><td>hola</td><td>hola</td><td>hola</td>
                </tr>
                <tr>
                    <th>cielo</th><th>{{ estado_cielo_ahora }}</th><th>{{ estado_cielo_hoy }}</th><th>{{ estado_cielo_manana }}</th>
                    <th>Velocidad media viento</th><th>{{ viento_ahora }}</th><th>{{ viento_ahora }}</th><th>{{ viento_manana }}</th>
                    <th>Precipitacion</th><th>{{ precipitacion_ahora }}</th><th>{{ precipitacion_hoy }}</th><th>{{ precipitacion_manana }}</th>
                    <th>Cota de nieve</th><th>{{ cota_de_nieve_ahora }}</th><th>{{ cota_de_nieve_hoy }}</th><th>{{ cota_de_nieve_manana }}</th>
                    <th>Tº Mínima</th><th>       </th><th>{{ temperatura_minima_hoy }}</th><th>{{ temperatura_minima_manana }}</th>
                    <th>Tº máxima</th><th>       </th><th>{{ temperatura_maxima_hoy }}</th><th>{{ temperatura_maxima_manana }}</th>
                </tr>
            </table>
        </div>

    {% else %}

        <div class="main-container">
            <table>
                <thead>
                <tr>
                    <th>Medición<th>Ahora</th><th>Hoy</th><th>Mañana</th>
                </tr>
                </thead>

                <tr>
                    <td>Cielo</td>
                    <td>{{ estado_cielo_ahora }}</td>
                    <td>{{ estado_cielo_hoy }}</td>
                    <td>{{ estado_cielo_manana }}</td>
                </tr>
                <tr>
                    <td>Precipitación</td>
                    <td>{{ precipitacion_ahora }}</td>
                    <td>{{ precipitacion_hoy }}</td>
                    <td>{{ precipitacion_manana }}</td>
               </tr>
                <tr>
                    <td>Temperatura Actual</td>
                    <td>{{ temperatura_ahora }}</td>
                    <td>---</td>
                    <td>---</td>
                </tr>
                <tr>
                   <td>Temperatura Minima</td>
                    <td>---</td>
                    <td>{{ temperatura_minima_hoy }}</td>
                    <td>{{ temperatura_minima_manana }}</td>
                </tr>
                <tr>
                    <td>Temperatura Máxima</td>
                    <td>---</td>
                    <td>{{ temperatura_maxima_hoy }}</td>
                    <td>{{ temperatura_maxima_manana }}</td>
                </tr>
                <tr>
                    <td>Viento</td>
                    <td>{{ viento_ahora }}</td>
                    <td>{{ viento_hoy }}</td>
                    <td>{{ viento_manana }}</td>
                </tr>
                <tr>
                    <td>Cota de nieve</td>
                    <td>{{ cota_de_nieve_ahora }}</td>
                    <td>{{ cota_de_nieve_hoy }}</td>
                    <td>{{ cota_de_nieve_manana }}</td>
                </tr>

            </table>
        </div>


    {% endif %}

{% endblock %}